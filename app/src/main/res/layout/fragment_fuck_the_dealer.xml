<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fuckTheDealerLayout"
    style="@style/taustavari"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minipelit.FuckTheDealer">

    <TextView
        android:id="@+id/tvTitle_FtheDealer"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_fTheDealerTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider16"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_FtheDealer" />

    <Button
        android:id="@+id/btJatkaPelia_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_teema_continue"
        android:minHeight="48dp"
        android:text="@string/text_continueGame"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle_FtheDealer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle_FtheDealer" />

    <TextView
        android:id="@+id/tvOhjeistus_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_taskDescriptionFTheDealer"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tvOhjeistus2_FtheDealer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvPelaajaVuorossa_FtheDealer"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_FtheDealer"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvPelaajaVuorossa_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_blank"
        app:layout_constraintEnd_toStartOf="@+id/tvOhjeistus_FtheDealer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOhjeistus_FtheDealer" />

    <TextView
        android:id="@+id/tvOhjeistus2_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_taskDescriptionFTheDealer2"
        app:layout_constraintBottom_toTopOf="@+id/tvOhjeistus3_FtheDealer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOhjeistus_FtheDealer" />

    <TextView
        android:id="@+id/tvSeuraavaPelaaja_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_blank"
        app:layout_constraintEnd_toStartOf="@+id/tvOhjeistus3_FtheDealer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOhjeistus2_FtheDealer" />

    <TextView
        android:id="@+id/tvOhjeistus3_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_taskDescriptionFTheDealer3"
        app:layout_constraintBottom_toTopOf="@+id/tvOhjeistus4_FtheDealer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSeuraavaPelaaja_FtheDealer"
        app:layout_constraintTop_toBottomOf="@+id/tvOhjeistus2_FtheDealer" />

    <TextView
        android:id="@+id/tvOhjeistus4_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_taskDescriptionFTheDealer4"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOhjeistus3_FtheDealer" />

    <Button
        android:id="@+id/btAloita_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_teema_start"
        android:text="@string/text_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivKortti_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/hertta1" />

    <ImageView
        android:id="@+id/ivKorttiPeitto_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ivKortti_FtheDealer"
        app:layout_constraintEnd_toEndOf="@+id/ivKortti_FtheDealer"
        app:layout_constraintStart_toStartOf="@+id/ivKortti_FtheDealer"
        app:layout_constraintTop_toTopOf="@+id/ivKortti_FtheDealer"
        tools:src="@drawable/tausta" />

    <Button
        android:id="@+id/btNextCard_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_teema_settings"
        android:text="@string/text_btNextCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btPeek_FtheDealer" />

    <Button
        android:id="@+id/btPeek_FtheDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_teema_alempi"
        android:text="@string/text_btPeek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btNextCard_FtheDealer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>